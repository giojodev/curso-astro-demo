---
import {type SpaceXAPI} from '../types/api';
const res= await fetch('https://api.spacexdata.com/v5/launches/query',{
    method:'POST',
    headers:{
        "Content-Type":"application/json"
    },
    body:JSON.stringify({
        query:{},
        options:{
            sort:{
                date_unix:"asc",
            },
            limit:30,
        },
    }),
});
const {docs:launches} =  await res.json() as SpaceXAPI;

---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
{
    launches.map((launch)=><article>
        <img src={launch.links.patch.small} />
        <h2>Launch #{launch.id}</h2>
        </article>)
}
</div>