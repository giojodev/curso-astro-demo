---
import Layout from "../../layouts/Layout.astro";
import { getLatestLaunches, getLaunchById } from "../../services/spacex.services";
const {id} = Astro.params;

export const prerender = false;
let launch;

if(id)
{
launch = await getLaunchById({id});
}


console.log(launch);
---
<Layout title=`Launch #${id}`>
    <article class="flex gap-y-4 float-right">
        <img class="w-52 h-auto" src={launch?.links?.patch.small}/>
        <h2 class="text-green-500">Flying Number: {launch?.flight_number}</h2><br/>
        <h3 class="text-gray-400 font-bold">{launch?.name}</h3><br/>
        <p>{launch?.details}</p>
    </article>
</Layout>